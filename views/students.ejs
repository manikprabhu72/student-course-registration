<!DOCTYPE html>
<html lang="en">
<head>
  <title>Student-Course-Registration</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/assets/stylesheets/bootstrap.min.css">
  <script src="/assets/js/jquery.min.js"></script>
  <script src="/assets/js/jquery.min.js"></script>
  <link rel="stylesheet" href="/assets/stylesheets/styles.css">
</head>
<body>
<% include ./header %>
<div class="container-fluid text-center">    
  <div class="row content">
    <% include ./navigation %>
    <div class="col-sm-8 text-left"> 
      <br><br>
      <h1 class="center">Students List</h1>
      <br><br>
      <table class="table center" >

          <thead>
            <th class="center">Student ID</th>
            <th class="center"> First Name</th>
            <th class="center">Last Name</th>
          </thead>
          <% students.forEach(student =>{ %>
            <tr>
                <td><a href="/registration/student?studentId=<%= student.studentId %>"><%= student.studentId %></a></td>
                <td><a href="/registration/student?studentId=<%= student.studentId %>"><%= student.fName %></a></td>
                <td><a href="/registration/student?studentId=<%= student.studentId %>"><%= student.lName %></a></td>
                <td>
                  <form action="/registration/deleteStudent">
                    <input type="hidden" name="studentId" value="<%= student.studentId %>" />
                    <button class="btn btn-primary" type="submit">Delete</button>
                  </form>
                </td>
            </tr> 
          <% }) %>
      </table>
      <form action="/registration/newStudent" class="center">
        <button class="btn btn-primary center" type="submit">Add New Student</button>
      </form>
      <hr>
    </div>
  </div>
</div>
